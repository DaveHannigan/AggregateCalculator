    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@color/colorGreen">



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/textLeague"

        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginStart="@dimen/margin_mid_score"
        android:layout_marginEnd="@dimen/margin_mid_score"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"

        android:background="@drawable/rounded"
        android:padding="@dimen/padding"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/textDivision"

        android:layout_marginStart="@dimen/margin_mid_score"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintTop_toBottomOf="@id/textLeague"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textMatchDate"

        android:textAlignment="center"

        android:background="@drawable/rounded"
        android:padding="@dimen/padding"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/textMatchDate"

        app:layout_constraintTop_toTopOf="@id/textDivision"
        app:layout_constraintBottom_toBottomOf="@id/textDivision"
        app:layout_constraintStart_toEndOf="@id/textDivision"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginEnd="@dimen/margin_mid_score"
        android:layout_marginStart="@dimen/margin_mid_score"

        android:background="@drawable/rounded"
        android:padding="@dimen/padding"

        android:textAlignment="center"

        />


    <TextView
        android:id="@+id/homeTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/home_team"
        android:textAlignment="center"

        app:layout_constraintTop_toBottomOf="@id/textDivision"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintStart_toStartOf="@id/textDivision"
        app:layout_constraintEnd_toEndOf="@id/textDivision"


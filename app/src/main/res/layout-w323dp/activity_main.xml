        android:layout_height="wrap_content"

        android:text="@string/away_team"
        android:textAlignment="center"


        app:layout_constraintTop_toTopOf="@id/homeTeam"
        app:layout_constraintBottom_toBottomOf="@id/homeTeam"

        app:layout_constraintEnd_toEndOf="@id/textMatchDate"
        app:layout_constraintStart_toStartOf="@id/textMatchDate"


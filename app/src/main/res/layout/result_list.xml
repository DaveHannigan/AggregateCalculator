<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/homeTeam"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_mid_score"
        app:layout_constraintEnd_toStartOf="@+id/homeTeamScore"
        app:layout_constraintHorizontal_weight="4"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/small_text"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/homeTeamScore"
        app:layout_constraintTop_toTopOf="@id/homeTeam"
        app:layout_constraintBottom_toBottomOf="@id/homeTeam"
        app:layout_constraintStart_toEndOf="@id/homeTeam"
        app:layout_constraintEnd_toStartOf="@id/awayTeamScore"
        app:layout_constraintHorizontal_weight="1"
        android:textSize="@dimen/small_text"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/awayTeamScore"
        app:layout_constraintTop_toTopOf="@id/homeTeam"
        app:layout_constraintBottom_toBottomOf="@id/homeTeam"
        app:layout_constraintStart_toEndOf="@id/homeTeamScore"
        app:layout_constraintEnd_toStartOf="@+id/awayTeam"
        android:textAlignment="center"
        android:textSize="@dimen/small_text"
        app:layout_constraintHorizontal_weight="1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/awayTeam"
        app:layout_constraintTop_toTopOf="@id/homeTeam"
        app:layout_constraintBottom_toBottomOf="@id/homeTeam"
        app:layout_constraintStart_toEndOf="@id/awayTeamScore"
        app:layout_constraintEnd_toStartOf="@id/date"
        app:layout_constraintHorizontal_weight="4"
        android:textSize="@dimen/small_text"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        app:layout_constraintTop_toTopOf="@id/homeTeam"
        app:layout_constraintBottom_toBottomOf="@id/homeTeam"
        app:layout_constraintStart_toEndOf="@id/awayTeam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        android:textSize="@dimen/small_text"
        android:layout_marginEnd="@dimen/margin_mid_score"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        android:text="1sp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textLeague"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDivision"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
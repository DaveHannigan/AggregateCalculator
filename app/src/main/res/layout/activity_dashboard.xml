<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@color/colorGreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >



        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/buttonCheckResults"

            android:layout_marginTop="@dimen/margin_top"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginStart="@dimen/margin_end"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/margin_end"
            app:layout_constraintEnd_toEndOf="parent"

            android:textAlignment="center"
            android:text="@string/checkResults"

            android:background="@drawable/rounded"
            android:padding="@dimen/padding"
            />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/buttonFixtures"

                android:layout_marginTop="@dimen/margin_top"
                app:layout_constraintTop_toBottomOf="@id/buttonCheckResults"

                app:layout_constraintStart_toStartOf="@id/buttonCheckResults"
                app:layout_constraintEnd_toEndOf="@id/buttonCheckResults"

                android:textAlignment="center"
                android:text="@string/fixtures"
                android:background="@drawable/rounded"
                android:padding="@dimen/padding"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/buttonEditTeams"

                android:layout_marginTop="@dimen/margin_top"
                app:layout_constraintTop_toBottomOf="@id/buttonFixtures"

                app:layout_constraintStart_toStartOf="@id/buttonCheckResults"
                app:layout_constraintEnd_toEndOf="@id/buttonCheckResults"

                android:textAlignment="center"
                android:text="@string/edit_teams"
                android:padding="@dimen/padding"
                android:background="@drawable/rounded"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/buttonEditPlayers"

                app:layout_constraintTop_toBottomOf="@id/buttonEditTeams"
                android:layout_marginTop="@dimen/margin_top"

                app:layout_constraintStart_toStartOf="@id/buttonCheckResults"
                app:layout_constraintEnd_toEndOf="@id/buttonCheckResults"

                android:textAlignment="center"
                android:text="@string/editPlayers"
                android:padding="@dimen/padding"
                android:background="@drawable/rounded"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>




</ScrollView>
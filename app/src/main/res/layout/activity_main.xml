<?xml version="1.0" encoding="utf-8"?>

<ScrollView
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/homeTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/home_team"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"

        app:layout_constraintEnd_toStartOf="@id/awayTeam"
        app:layout_constraintRight_toLeftOf="@id/awayTeam" />


    <TextView
        android:id="@+id/awayTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/away_team"

        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginRight="@dimen/margin_end"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/homeTeam"

         />

    <Spinner
        android:id="@+id/spinHomeTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/homeTeam"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/homeTeam"
        app:layout_constraintEnd_toEndOf="@id/homeTeam"/>

    <Spinner
        android:id="@+id/spinAwayTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/awayTeam"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/awayTeam"
        app:layout_constraintEnd_toEndOf="@id/awayTeam"/>

    <Spinner
        android:id="@+id/spinHomePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/match_1"

        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintTop_toBottomOf="@id/spinHomeTeam"


        app:layout_constraintEnd_toStartOf="@+id/homeScore1"
        app:layout_constraintStart_toStartOf="parent"
         />

    <EditText
        android:id="@+id/homeScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/awayScore1"



        app:layout_constraintTop_toTopOf="@id/spinHomePlayer1"
        app:layout_constraintBottom_toBottomOf="@+id/spinHomePlayer1"

        app:layout_constraintStart_toEndOf="@id/spinHomePlayer1"
        app:layout_constraintEnd_toEndOf="@id/spinAwayPlayer1"
         />

    <Spinner
        android:id="@+id/spinAwayPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/spinHomePlayer1"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer1"
        app:layout_constraintStart_toEndOf="@id/homeScore1"
        app:layout_constraintEnd_toStartOf="@id/awayScore1"/>

    <EditText
        android:id="@+id/awayScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/homeScore2"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer1"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer1"

        app:layout_constraintStart_toEndOf="@id/spinAwayPlayer2"
        app:layout_constraintEnd_toEndOf="parent"


         />

    <Spinner
        android:id="@+id/spinHomePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/match_2"

        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintTop_toBottomOf="@id/spinHomePlayer1"
        app:layout_constraintStart_toStartOf="@id/spinHomePlayer1"
        app:layout_constraintEnd_toEndOf="@id/spinHomePlayer1"


 />

    <EditText
        android:id="@+id/homeScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/awayScore2"


        app:layout_constraintTop_toTopOf="@id/spinHomePlayer2"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer2"

        app:layout_constraintStart_toEndOf="@id/spinHomePlayer2"
        app:layout_constraintEnd_toStartOf="@+id/spinAwayPlayer2"
        />

    <Spinner
        android:id="@+id/spinAwayPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer2"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer2"
        app:layout_constraintStart_toEndOf="@id/homeScore2"
        app:layout_constraintEnd_toStartOf="@id/awayScore2"/>

    <EditText
        android:id="@+id/awayScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/homeScore3"


        app:layout_constraintTop_toTopOf="@id/spinHomePlayer2"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer2"

        app:layout_constraintStart_toEndOf="@id/spinAwayPlayer2"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Spinner
        android:id="@+id/spinHomePlayer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/match_3"

        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintTop_toBottomOf="@id/spinHomePlayer2"

        app:layout_constraintStart_toStartOf="@id/spinHomePlayer2"
        app:layout_constraintEnd_toEndOf="@id/spinHomePlayer2"
        />
    <EditText
        android:id="@+id/homeScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/awayScore3"


        app:layout_constraintTop_toTopOf="@id/spinHomePlayer3"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer3"

        app:layout_constraintEnd_toEndOf="@id/homeScore2"
        app:layout_constraintStart_toStartOf="@id/homeScore2"
        />
    <Spinner
        android:id="@+id/spinAwayPlayer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer3"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer3"

        app:layout_constraintStart_toStartOf="@id/spinAwayPlayer2"
        app:layout_constraintEnd_toEndOf="@id/spinAwayPlayer2"/>

    <EditText
        android:id="@+id/awayScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/homeScore4"


        app:layout_constraintTop_toTopOf="@id/spinHomePlayer3"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer3"

        app:layout_constraintStart_toStartOf="@id/awayScore2"
        app:layout_constraintEnd_toEndOf="@id/awayScore2"
        />

    <Spinner
        android:id="@+id/spinHomePlayer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/match_4"

        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintTop_toBottomOf="@id/spinHomePlayer3"

        app:layout_constraintStart_toStartOf="@id/spinHomePlayer3"
        app:layout_constraintEnd_toEndOf="@id/spinHomePlayer3"
        />

    <EditText
        android:id="@+id/homeScore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/awayScore4"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer4"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer4"

        app:layout_constraintStart_toStartOf="@id/homeScore3"
        app:layout_constraintEnd_toEndOf="@id/homeScore3"
        />
    <Spinner
        android:id="@+id/spinAwayPlayer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer4"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer4"

        app:layout_constraintStart_toStartOf="@id/spinAwayPlayer3"
        app:layout_constraintEnd_toEndOf="@id/spinAwayPlayer3"/>

    <EditText
        android:id="@+id/awayScore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/homeScore5"


        app:layout_constraintTop_toTopOf="@id/spinHomePlayer4"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer4"

        app:layout_constraintStart_toStartOf="@id/awayScore3"
        app:layout_constraintEnd_toEndOf="@id/awayScore3"
        />


        <Spinner
            android:id="@+id/spinHomePlayer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/match_5"

            android:layout_marginTop="@dimen/margin_top"
            app:layout_constraintTop_toBottomOf="@id/spinHomePlayer4"

            app:layout_constraintStart_toStartOf="@id/spinHomePlayer4"
            app:layout_constraintEnd_toEndOf="@id/spinHomePlayer4"
            />

        <EditText
            android:id="@+id/homeScore5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:nextFocusDown="@id/awayScore5"


            app:layout_constraintTop_toTopOf="@id/spinHomePlayer5"
            app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer5"


            app:layout_constraintStart_toStartOf="@id/homeScore4"
            app:layout_constraintEnd_toEndOf="@id/homeScore4"
            />

        <Spinner
            android:id="@+id/spinAwayPlayer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@+id/spinHomePlayer5"
            app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer5"

            app:layout_constraintStart_toStartOf="@id/spinAwayPlayer4"
            app:layout_constraintEnd_toEndOf="@id/spinAwayPlayer4"/>

        <EditText
            android:id="@+id/awayScore5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:nextFocusDown="@id/homeScore6"


            app:layout_constraintTop_toTopOf="@+id/spinHomePlayer5"
            app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer5"

            app:layout_constraintStart_toStartOf="@id/awayScore4"
            app:layout_constraintEnd_toEndOf="@id/awayScore4"
            />

    <Spinner
        android:id="@+id/spinHomePlayer6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/match_6"

        app:layout_constraintTop_toBottomOf="@id/spinHomePlayer5"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/spinHomePlayer5"
        app:layout_constraintEnd_toEndOf="@id/spinHomePlayer5"
        />

    <EditText
        android:id="@+id/homeScore6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/awayScore6"


        app:layout_constraintTop_toTopOf="@id/spinHomePlayer6"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer6"

        app:layout_constraintStart_toStartOf="@id/homeScore5"
        app:layout_constraintEnd_toEndOf="@id/homeScore5"
        />

    <Spinner
        android:id="@+id/spinAwayPlayer6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer6"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer6"

        app:layout_constraintStart_toStartOf="@id/spinAwayPlayer5"
        app:layout_constraintEnd_toEndOf="@id/spinAwayPlayer5"/>

    <EditText
        android:id="@+id/awayScore6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/homeScore7"


        app:layout_constraintTop_toTopOf="@+id/spinHomePlayer6"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer6"

        app:layout_constraintStart_toStartOf="@id/awayScore5"
        app:layout_constraintEnd_toEndOf="@id/awayScore5"
        />

    <Spinner
        android:id="@+id/SpinHomePlayer7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/match_7"

        app:layout_constraintTop_toBottomOf="@id/spinHomePlayer6"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/spinHomePlayer6"
        app:layout_constraintEnd_toEndOf="@id/spinHomePlayer6"
        />

    <EditText
        android:id="@+id/homeScore7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/awayScore7"


        app:layout_constraintTop_toTopOf="@id/SpinHomePlayer7"
        app:layout_constraintBottom_toBottomOf="@id/SpinHomePlayer7"

        app:layout_constraintStart_toStartOf="@id/homeScore6"
        app:layout_constraintEnd_toEndOf="@id/homeScore6"
        />

    <Spinner
        android:id="@+id/spinAwayPlayer7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/SpinHomePlayer7"
        app:layout_constraintBottom_toBottomOf="@id/SpinHomePlayer7"

        app:layout_constraintStart_toStartOf="@id/spinAwayPlayer6"
        app:layout_constraintEnd_toEndOf="@id/spinAwayPlayer6"/>

    <EditText
        android:id="@+id/awayScore7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/homeScore8"


        app:layout_constraintTop_toTopOf="@id/SpinHomePlayer7"
        app:layout_constraintBottom_toBottomOf="@id/SpinHomePlayer7"


        app:layout_constraintStart_toStartOf="@id/awayScore6"
        app:layout_constraintEnd_toEndOf="@id/awayScore6"
        />

    <Spinner
        android:id="@+id/spinHomePlayer8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/match_8"


        app:layout_constraintTop_toBottomOf="@id/SpinHomePlayer7"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/SpinHomePlayer7"
        app:layout_constraintEnd_toEndOf="@id/SpinHomePlayer7"
        />

    <EditText
        android:id="@+id/homeScore8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/awayScore8"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer8"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer8"


        app:layout_constraintStart_toStartOf="@id/homeScore7"
        app:layout_constraintEnd_toEndOf="@id/homeScore7"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer8"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer8"

        app:layout_constraintStart_toStartOf="@id/spinAwayPlayer7"
        app:layout_constraintEnd_toEndOf="@id/spinAwayPlayer7"/>

    <EditText
        android:id="@+id/awayScore8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"

        app:layout_constraintTop_toTopOf="@id/spinHomePlayer8"
        app:layout_constraintBottom_toBottomOf="@id/spinHomePlayer8"


        app:layout_constraintStart_toStartOf="@id/awayScore7"
        app:layout_constraintEnd_toEndOf="@id/awayScore7"
        />



    <TextView
        android:id="@+id/ourAgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/homeScore8"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/homeScore8"
        app:layout_constraintEnd_toEndOf="@id/homeScore8"

        android:text="@string/initial_score"
        />

    <TextView
        android:id="@+id/theirAgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/awayScore8"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/awayScore8"
        app:layout_constraintEnd_toEndOf="@id/awayScore8"

        android:text="@string/initial_score"/>

    <TextView
        android:id="@+id/gamesScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frame_score"

        app:layout_constraintTop_toBottomOf="@id/ourAgg"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/spinHomePlayer8"
        app:layout_constraintEnd_toEndOf="@id/spinHomePlayer8"/>

    <TextView
        android:id="@+id/ourGamesWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score"

        app:layout_constraintTop_toTopOf="@id/gamesScore"
        app:layout_constraintBottom_toBottomOf="@id/gamesScore"

        app:layout_constraintStart_toStartOf="@id/ourAgg"
        app:layout_constraintEnd_toEndOf="@id/ourAgg"/>

    <TextView
        android:id="@+id/theirGamesWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score"

        app:layout_constraintTop_toTopOf="@id/gamesScore"
        app:layout_constraintBottom_toBottomOf="@id/gamesScore"

        app:layout_constraintStart_toStartOf="@id/theirAgg"
        app:layout_constraintEnd_toEndOf="@id/theirAgg"/>

    <TextView
        android:id="@+id/matchScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/match_score"

        app:layout_constraintTop_toBottomOf="@id/gamesScore"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/gamesScore"
        app:layout_constraintEnd_toEndOf="@id/gamesScore"/>

    <TextView
        android:id="@+id/ourMatchScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score"

        app:layout_constraintTop_toBottomOf="@id/ourGamesWon"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/ourGamesWon"
        app:layout_constraintEnd_toEndOf="@id/ourGamesWon"/>

    <TextView
        android:id="@+id/theirMatchScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score"

        app:layout_constraintTop_toBottomOf="@id/theirGamesWon"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/theirGamesWon"
        app:layout_constraintEnd_toEndOf="@id/theirGamesWon"/>

    <TextView
        android:id="@+id/aggregateDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/matchScore"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@+id/matchScore"
        app:layout_constraintEnd_toEndOf="@+id/matchScore"

        android:text="@string/aggregate_difference"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score"

        app:layout_constraintTop_toBottomOf="@+id/theirMatchScore"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@+id/theirMatchScore"
        app:layout_constraintEnd_toEndOf="@+id/theirMatchScore"/>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_scores"
        android:onClick="clearScores"

        app:layout_constraintTop_toBottomOf="@id/aggregateDifference"
        android:layout_marginTop="@dimen/margin_top"

        app:layout_constraintStart_toStartOf="@id/aggregateDifference"
        app:layout_constraintEnd_toEndOf="@id/result"

        />
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:onClick="saveInfo"

        app:layout_constraintTop_toTopOf="@id/clearButton"
        app:layout_constraintBottom_toBottomOf="@id/clearButton"

        app:layout_constraintEnd_toStartOf="@id/clearButton"/>






</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>